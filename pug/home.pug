extends layout/layout.pug
block variables
    - trsHead = true;
block content
    // begin firstScreen
    .firstScreen
        each item in ['', '']
            .firstScreen__item
                picture.firstScreen__bg
                    source(srcset="img/home-bg.jpg" media="(max-width: 767px)")
                    img(src="img/home-bg.jpg" alt="")
                .container_center
                    .firstScreen__content
                        h1.firstScreen__title Бизнес-школа – современный и эффективный формат онлайн-обучения
                        .firstScreen__sub Бизнес-школа – современный и эффективный формат <br>онлайн-обучения (Текст 2-3 предложения о школе)
                        .firstScreen__action
                            button.btn.btn_success начать обучение

    // end firstScreen

    // begin announcements
    .announcements
        each item, i in ['Самые популярные <br>курсы для менеджеров', 'Личная подборка Германа Грефа', 'Лучшие курсы по мнению выпускников']
            .announcements__item
                .announcements__img
                    img(src="img/announcements-"+(i+1)+".jpg", alt="")
                .announcements__text!=item

    // end announcements

    // begin coursesList
    .coursesList.section
        .container_center
            .page__titleInline
                h2.page__title Популярные курсы
                a.page__titleMore(href="") Все курсы

            .coursesFilter
                .coursesFilter__item
                    | Подборка Грефа
                    .coursesFilter__count 5
                .coursesFilter__item
                    | Управление и менеджмент
                    .coursesFilter__count 3
                .coursesFilter__item
                    | IT технологии 
                    .coursesFilter__count 8
                .coursesFilter__item
                    | Продвижение
                    .coursesFilter__count 2

            .coursesList__row
                each item, i in ['', '', '', '', '', '']
                    .coursesList__item
                        .coursesList__head
                            .coursesList__duration
                                i.icon_clock 
                                | 18 месяцев
                            .coursesList__complexity
                                | Сложность
                                .coursesList__progress
                                    .progressCol
                                        if i === 5
                                            each item in ['success', 'success', 'success', 'success', 'success', '', '', '', '', '']
                                                .progressCol__item(class=item)
                                        else if i === 3
                                            each item in ['warning', 'warning', 'warning', 'warning', 'warning', 'warning', 'warning', 'warning', '', '']
                                                .progressCol__item(class=item)
                                        else
                                            each item in ['danger', 'danger', '', '', '', '', '', '', '', '']
                                                .progressCol__item(class=item)
                        if i === 1
                            .coursesList__name Стратегический менеджмент в контексте управления государством
                        else
                            .coursesList__name Стратегический менеджмент
                        .coursesList__middle
                            .coursesList__rate
                                .rating
                                    i.icon_star.active 
                                    i.icon_star.active 
                                    i.icon_star.active 
                                    i.icon_star 
                                    i.icon_star 
                                | (3.2)
                            .coursesList__price 12 000 рублей
                        if i === 1
                            .coursesList__description Стратегия определяет направления и ориентиры. <br>Вы определяете ориентиры и направления?
                        else
                            .coursesList__description Стратегия определяет направления и ориентиры. <br>Вы определяете ориентиры и направления? <br>Тогда этот курс для Вас.
                        .coursesList__action
                            button.btn.btn_small(type="button") Записаться

                        .coursesList__tags
                            a(href="") Подборка Грефа
                            a.danger(href="") IT-технологии
                            a.success(href="") Продвижение
    // end coursesList

    .stepsLine.bg_primary(style="background-image: url('img/question-box.jpg')")
        .container_center
            .stepsLine__row
                .stepsLine__item
                    .stepsLine__num 10
                    .stepsLine__name программ
                .stepsLine__item
                    .stepsLine__num 100
                    .stepsLine__name курсов
                .stepsLine__item
                    .stepsLine__num 1000
                    .stepsLine__name экспертов

            .stepsLine__content
                .stepsLine__descr
                    .stepsLine__title Не знаете, с чего начать?
                    .stepsLine__text Пройдите небольшое тестирование и узнайте, какие курсы подходят именно Вам
                .stepsLine__action
                    a.btn.btn_contrast.btn_lg(href="#") начать тест

    .section
        .container_center
            h2.page__title Партнеры школы
            .parthnersList
                each item, i in ['', '', '', '', '']
                    .parthnersList__item
                        img(src="img/parthners-"+i+".png", alt="")
